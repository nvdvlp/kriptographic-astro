---
import { SplashComponent } from '../components/splash/splash.component';
import { TeamComponent } from '../components/team/team.component';
import { AboutUsComponent } from '../components/aboutUs/aboutUs.component';
import Loader from '../components/loader/loader.astro';
import { JoinUsComponent } from '../components/joinUs/joinUs.component';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Krypto St" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
		<title>Kriptographic</title>
	</head>
	<body>
		<section id="loader-sec">
			<Loader />
		</section>
		<section id="all">
			<SplashComponent client:load />
			<AboutUsComponent client:load />
			<TeamComponent />
			<JoinUsComponent client:load />
		</section>

		<!-- <div class="lights">
			<div class="light top-right"></div>
			<div class="light middle-left"></div>
			<div class="light bottom-right"></div>
		</div> -->
	</body>
</html>

<style is:global>
	*{
		margin: 0;
		box-sizing: border-box;
	}
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #070708;
		background-size: 224px;
	}
	html,body {
		height: 100%;
		width: 100%;
		min-height: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace,
			Medium;
	}
	.lights {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }
	.light{
		position: absolute;
		width:200px;
		height: 192px;
		border-radius: 50%;
        background-color: rgba(136, 243, 235, 0.3);
		filter:blur(70px);
	}
	.top-right{
        top: -80px;
        right: -60px;
	}
	.middle-left {
        top: 40%;
        left: -100px;
    }
    .bottom-right {
        bottom: -50px;
        right: -100px;
    }
	/* Register your custom font family and tell the browser where to find it. */
	@font-face {
		font-family: 'Medium';
		src: url('/fonts/Medium.otf');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}
	#all{
		flex-direction: column;
		justify-content: flex-start;
		height: 100%;
	}
	#loaderSec{
		width: 100%;
		min-height: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
	}
</style>

<script>
	const loaderElement = document.getElementById('loader-sec');
	const everythingElse = document.getElementById('all');

	if(everythingElse){
		everythingElse.style.display = 'none';
	}
	console.log(loaderElement)
	setTimeout(() => {
		if (loaderElement && everythingElse) {
			loaderElement.style.display = 'none';
			everythingElse.style.display = 'flex';
		console.log("w")
	}
	}, 1000);
</script>