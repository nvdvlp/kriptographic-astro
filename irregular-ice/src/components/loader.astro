<div class="loader"></div>

<style>
	.loader{
		width: 60px;
		height: 60px;
		border-radius: 50%;
		/* border:  3px solid white;
		border-top-color:transparent ; */
		animation:spin 1.2s linear infinite;
	}
	@keyframes spin {
		to{
			transform: rotate(360deg);
		}
	}
	.loader::after,
	.loader::before{
		content: '';
		position: absolute;
		border-radius: inherit;
	}
	.loader::before{
		width: 100%;
		height: 100%;
		background-image: linear-gradient(0deg, #D4E4D8 0%, #52b9bc 100%);
	}
	.loader::after{
		width: 85%;
		height: 85%;
		background-color: #09090E;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
	}
</style>
